{
  "manifest_version": 3,
  "name": "FC Block",
  "version": "1.0",
  "description": "Blocks the distracting elements of Farcaster.xyz",
  "permissions": ["activeTab", "storage"],
  "content_scripts": [
    {
      "matches": ["https://farcaster.xyz/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "FC Block"
  },
  "icons": {
    "16": "no.png",
    "48": "no.png",
    "128": "no.png"
  }
}
